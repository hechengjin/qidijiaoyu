<% posts.forEach(function(post, index) {
  if( index % 3 == 0) {%>
    <div class="row">
  <%}%>
  <div class="span4">
    <h2><%=post.title%></h2>
    <p><a href="/u/<%=post.user%>"><%=post.user%></a>&amp;nbsp;<small><%=post.time%></small></p>
    <p></p>
    <p><%=post.content%></p>
  </div>
  <% if(index % 3 === 2) {%>
    </div> <!--结束行--->
  <%}%>
<%})%>

<% if (posts.length % 3 !== 0) { %>
</div> <!--结束行--->
<%}%>